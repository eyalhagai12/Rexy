    <TextView
        android:id="@+id/status"
        android:layout_width="79dp"
        android:layout_height="31dp"
        android:layout_above="@+id/button_layout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="4dp"
        android:text="Status"
        android:textSize="16sp"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/Battery_status"
        android:layout_width="52dp"
        android:layout_height="32dp"
        android:layout_above="@+id/button_layout"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/status"
        android:text="Bat"
        android:textSize="16sp"
        android:visibility="visible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/up_button"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_above="@+id/button_layout"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="-7dp"
        android:layout_toEndOf="@+id/Battery_status"
        android:text="up"
        android:textSize="20sp" />

    <Button
        android:id="@+id/down_button"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_above="@+id/button_layout"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@+id/up_button"
        android:text="Down"
        android:textSize="16sp" />

    <Button
        android:id="@+id/record_button"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_layout"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@+id/down_button"
        android:text="Record" />

    <TextView
        android:id="@+id/command_text"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_above="@+id/button_layout"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/record_button"
        android:text="command"
        tools:visibility="visible" />

    <Button
        android:id="@+id/lang_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_layout"
        android:layout_marginStart="196dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/command_text"
        android:text="HE" />

